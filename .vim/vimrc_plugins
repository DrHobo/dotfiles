"- Individual Plugin Settings {{{1
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"- General utility functions
" -----------------------------------------------------------------------------
command! PlugList echo g:plugs_order  " list loaded plugins
" -----------------------------------------------------------------------------

"- Vim-Airline and Tmuxline
" -----------------------------------------------------------------------------
if exists('g:plugs["vim-airline"]')  " find plugin name in g:plugs_order
  "- Airline
  let g:airline#extensions#tabline#enabled = 1  " 1 to display buffers at top
  let g:airline#extensions#tabline#buffer_idx_mode = 1  " show buffer numbers
  let g:airline_section_warning = ''
  let g:airline_symbols_ascii = 1  " unicode doesn't work properly
  "- Tmuxline
  "- Start with :Tmuxline
  "- See :h Tmuxline for settings
  if exists('$TMUX')
    "- Custom line: (grab these from ~/.tmux.conf
    let g:tmuxline_preset = {
        \'a'    : '#[fg=black][#[fg=colour56]#S,#[fg=colour4]#I,#[fg=colour6]#P#[fg=black]]',
        \'b'    : '',
        \'c'    : '',
        \'win'  : '#[fg=colour4]#[fg=default] #I:#(echo `basename #{pane_current_path}`)',
        \'cwin' : '#[fg=colour4]#F#[fg=default]#I:#(echo `basename #{pane_current_path}`)',
        \'x'    : '',
        \'y'    : '%Y-%m-%d %H:%M',
        \'z'    : '',
        \'options' : {'status-justify' : 'left'}}
    let g:tmuxline_powerline_separators = 0
  endif
endif
" -----------------------------------------------------------------------------

"- Colorscheme
" -----------------------------------------------------------------------------
if exists('g:plugs["vim-colorschemes"]')  " find plugin name in g:plugs_order
  "- Dark themes
  " colorscheme iceberg

  "- Light themes
  colorscheme bubblegum-256-light
  let g:airline_theme='bubblegum'  " if autoload fails

